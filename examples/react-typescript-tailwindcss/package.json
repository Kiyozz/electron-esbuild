{
  "name": "react-typescript-tailwindcss",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "electron-esbuild dev",
    "build": "electron-esbuild build",
    "package": "electron-builder"
  },
  "devDependencies": {
    "@types/node": "~14.14.31",
    "@types/react": "~17.0.2",
    "@types/react-dom": "~17.0.1",
    "autoprefixer": "~10.2.4",
    "electron": "~12.0.0",
    "electron-builder": "^22.9.1",
    "electron-esbuild": "^1.3.1",
    "electron-util": "~0.14.2",
    "esbuild": "^0.10.0",
    "esbuild-plugin-postcss2": "^0.0.7",
    "postcss": "~8.2.7",
    "react": "~17.0.1",
    "react-dom": "~17.0.1",
    "tailwindcss": "~2.0.3",
    "typescript": "~4.2.3"
  },
  "build": {
    "appId": "io.comp.myapp",
    "productName": "My App",
    "extraMetadata": {
      "name": "My App",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      },
      {
        "from": "dist/renderer"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  }
}
