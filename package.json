{
  "name": "electron-esbuild",
  "version": "1.1.3",
  "keywords": [
    "esbuild",
    "electron",
    "webpack",
    "renderer",
    "hmr",
    "hot reload",
    "cli"
  ],
  "description": "Use esbuild with Electron for blazing fast compilation",
  "main": "dist/index.js",
  "repository": "https://github.com/Kiyozz/electron-esbuild",
  "author": {
    "name": "KÃ©vin TURMEL",
    "email": "kevinturmel@gmail.com",
    "url": "https://github.com/Kiyozz"
  },
  "license": "MIT",
  "bin": {
    "electron-esbuild": "./dist/index.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "node scripts/build.js",
    "electron-esbuild": "node dist/index.js",
    "preprepublishOnly": "rimraf dist",
    "prepublishOnly": "node scripts/prepublishOnly.js",
    "lint": "eslint src --ext .ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "chokidar": "~3.5.1",
    "compression": "~1.7.4",
    "connect": "~3.7.0",
    "debounce-fn": "~4.0.0",
    "dependency-tree-81": "~8.1.2",
    "esbuild": "~0.9.0",
    "http-proxy": "~1.18.1",
    "joi": "~17.4.0",
    "js-yaml": "~4.0.0",
    "livereload": "~0.9.1",
    "meow": "^9.0.0",
    "rimraf": "~3.0.2",
    "webpack-dev-server": "~3.11.2"
  },
  "devDependencies": {
    "@types/compression": "~1.7.0",
    "@types/connect": "~3.4.34",
    "@types/cross-spawn": "^6.0.2",
    "@types/http-proxy": "~1.17.5",
    "@types/js-yaml": "~4.0.0",
    "@types/livereload": "~0.9.0",
    "@types/node": "^14.14.33",
    "@types/rimraf": "~3.0.0",
    "@types/webpack-dev-server": "~3.11.1",
    "@typescript-eslint/eslint-plugin": "~4.16.1",
    "@typescript-eslint/parser": "~4.16.1",
    "cross-spawn": "^6.0.5",
    "eslint": "~7.21.0",
    "eslint-config-prettier": "~8.1.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-prettier": "~3.3.1",
    "fast-glob": "^3.2.5",
    "husky": "~4.3.8",
    "lint-staged": "~10.5.4",
    "prettier": "~2.2.1",
    "typescript": "~4.2.3",
    "webpack": "~4.46.0"
  },
  "peerDependencies": {
    "webpack": ">=4"
  },
  "peerDependenciesMeta": {
    "webpack": {
      "optional": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
