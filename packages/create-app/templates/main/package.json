{
  "name": "main-only-javascript",
  "version": "1.0.0",
  "scripts": {
    "dev": "electron-esbuild dev",
    "build": "electron-esbuild build",
    "package": "electron-builder"
  },
  "type": "module",
  "devDependencies": {
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "electron-esbuild": "^8.0.0",
    "electron-util": "^0.18.1",
    "esbuild": "^0.21.2"
  },
  "build": {
    "appId": "io.comp.myapp",
    "productName": "My App",
    "extraMetadata": {
      "name": "My App",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  }
}
