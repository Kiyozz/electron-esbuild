{
  "name": "main-only-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "electron-esbuild dev",
    "build": "electron-esbuild build",
    "package": "electron-builder"
  },
  "type": "module",
  "author": "built by electron-esbuild",
  "description": "A simple Electron app built with electron-esbuild",
  "devDependencies": {
    "@types/node": "^20.11.1",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "electron-esbuild": "^9.0.0",
    "electron-util": "^0.18.1",
    "esbuild": "^0.25.4",
    "typescript": "~5.8.3"
  },
  "build": {
    "appId": "io.comp.myapp",
    "productName": "My App",
    "extraMetadata": {
      "name": "My App",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  }
}
