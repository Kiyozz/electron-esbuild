{
  "name": "main-only-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "electron-esbuild dev",
    "build": "electron-esbuild build",
    "package": "electron-builder"
  },
  "devDependencies": {
    "@types/node": "^16.9.6",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "electron-esbuild": "3.x",
    "electron-util": "^0.17.2",
    "esbuild": "0.x",
    "typescript": "^4.4.3"
  },
  "build": {
    "appId": "io.comp.myapp",
    "productName": "My App",
    "extraMetadata": {
      "name": "My App",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  }
}
