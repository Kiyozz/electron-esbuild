{
  "name": "@electron-esbuild/create-app",
  "version": "4.0.1",
  "keywords": [
    "electron",
    "react",
    "esbuild",
    "svelte",
    "cli",
    "create-app"
  ],
  "description": "Create Electron esbuild powered apps with one command",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kiyozz/electron-esbuild.git",
    "directory": "packages/create-app"
  },
  "author": "Kiyozz",
  "license": "MIT",
  "bin": {
    "create-app": "./dist/index.mjs"
  },
  "exports": "./dist/index.mjs",
  "engines": {
    "node": "^14.18 || >=16.0.0"
  },
  "scripts": {
    "build": "ee 'src/**' --format esm --sourcemap --clean-outdir --outdir dist --target node16",
    "prepublishOnly": "ee 'src/**' --format esm --sourcemap --clean-outdir --outdir dist --target node16 --check-types --ts-project tsconfig.types.json",
    "lint": "eslint src --ext mts,mjs,ts,js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "enquirer": "^2.3.6",
    "kolorist": "^1.7.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@electron-esbuild/ee": "workspace:*",
    "@types/cross-spawn": "^6.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.11",
    "typescript": "~5.0.4"
  }
}
