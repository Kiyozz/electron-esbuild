{
  "name": "electron-esbuild",
  "version": "2.0.0",
  "keywords": [
    "esbuild",
    "electron",
    "webpack",
    "renderer",
    "hmr",
    "hot reload",
    "cli"
  ],
  "description": "Use esbuild with Electron for blazing fast compilation",
  "main": "dist/index.js",
  "repository": "https://github.com/Kiyozz/electron-esbuild",
  "author": {
    "name": "KÃ©vin TURMEL",
    "email": "kevinturmel@gmail.com",
    "url": "https://github.com/Kiyozz"
  },
  "license": "MIT",
  "bin": {
    "electron-esbuild": "./dist/index.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "ee 'src/**' --format cjs --sourcemap",
    "electron-esbuild": "node dist/index.js",
    "prepublishOnly": "ee 'src/**' --check-types --minify --format cjs --no-sourcemap",
    "lint": "eslint src --ext .ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "chokidar": "^3.5.2",
    "compression": "^1.7.4",
    "connect": "^3.7.0",
    "debounce-fn": "^4.0.0",
    "deepmerge": "^4.2.2",
    "dependency-tree-81": "^8.1.2",
    "esbuild": "^0.12.15",
    "has": "^1.0.3",
    "http-proxy": "^1.18.1",
    "joi": "^17.4.1",
    "js-yaml": "^4.1.0",
    "livereload": "^0.9.1",
    "meow": "^9.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@electron-esbuild/ee": "workspace:^0.2.0",
    "@types/compression": "^1.7.1",
    "@types/connect": "^3.4.35",
    "@types/cross-spawn": "^6.0.2",
    "@types/has": "^1.0.0",
    "@types/http-proxy": "^1.17.7",
    "@types/js-yaml": "^4.0.2",
    "@types/livereload": "^0.9.1",
    "@types/node": "^16.3.1",
    "@types/rimraf": "^3.0.1",
    "@types/webpack-dev-server": "^3.11.5",
    "cross-spawn": "^6.0.5",
    "fast-glob": "^3.2.7",
    "typescript": "^4.3.5",
    "vite": "^2.4.2",
    "webpack": "^5.44.0",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "vite": "~2.4",
    "webpack": ">=4",
    "webpack-dev-server": ">=3"
  },
  "peerDependenciesMeta": {
    "webpack": {
      "optional": true
    },
    "webpack-dev-server": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
